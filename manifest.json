{
    "manifest_version": 2,
    
    "name": "Steam Tiny Enhancements",
    "description": "Includes tiny enhancements to Steam Website.",
    "version": "1.0.0",
    "short_name": "STE",
    "author": "moony aka Danila Kononov",
    "developer":
    {
        "name": "moony aka Danila Kononov",
        "url": "https://github.com/i-Moony/steam-tiny-enhancements/tree/firefox"
    },

    "icons":
    {
        "16": "static/SQE_16_TRANSPARENT.png",
        "32": "static/SQE_32_TRANSPARENT.png",
        "64": "static/SQE_64_TRANSPARENT.png",
        "128": "static/SQE_128_TRANSPARENT.png",
        "256": "static/SQE_256_TRANSPARENT.png"
    },

    "content_scripts":
    [
        {
            "matches": 
            [
                "https://*.steamcommunity.com/market/search*"
            ],
            "js":
            [
                "src/market.js"
            ],
            "css":
            [
                "src/market.css"
            ],
            "run_at": "document_idle",
            "all_frames": false,
            "match_about_blank": false
        }
    ]
}