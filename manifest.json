{
    "manifest_version": 3,
    
    "name": "Steam Tiny Enhancements",
    "description": "A small extension that applies tiny enhancements to Steam.",
    "version": "2.0.0",
    "short_name": "STE",
    "author": "Danila Kononov aka moony",
    "developer":
    {
        "name": "Danila Kononov aka moony",
        "url": "https://github.com/i-Moony/steam-tiny-enhancements/"
    },

    "icons":
    {
        "16": "static/ste-semi-transparent-16.png",
        "32": "static/ste-semi-transparent-32.png",
        "48": "static/ste-semi-transparent-48.png",
        "64": "static/ste-semi-transparent-64.png",
        "96": "static/ste-semi-transparent-96.png",
        "128": "static/ste-semi-transparent-128.png",
        "256": "static/ste-semi-transparent-256.png"
    },

    "browser_specific_settings":
    {
        "gecko":
        {
            "id": "steam-tiny-enhancements@moony.lol",
            "strict_min_version": "109.0"
        }
    },

    "permissions":
    [
        "storage"
    ]
}