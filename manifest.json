{
    "manifest_version": 2,
    
    "name": "Steam Tiny Enhancements",
    "description": "Includes tiny enhancements to Steam Website.",
    "version": "1.0.0",
    "short_name": "STE",
    "author": "moony aka Danila Kononov",
    "developer":
    {
        "name": "moony aka Danila Kononov",
        "url": "https://github.com/i-Moony/steam-tiny-enhancements/"
    },

    "icons":
    {
        "16": "static/STE_SEMI_TRANSPARENT_16.png",
        "32": "static/STE_SEMI_TRANSPARENT_32.png",
        "48": "static/STE_SEMI_TRANSPARENT_48.png",
        "64": "static/STE_SEMI_TRANSPARENT_64.png",
        "96": "static/STE_SEMI_TRANSPARENT_96.png",
        "128": "static/STE_SEMI_TRANSPARENT_128.png",
        "256": "static/STE_SEMI_TRANSPARENT_256.png"
    },

    "browser_specific_settings":
    {
        "gecko":
        {
            "id": "steam-tiny-enhancements@moony.lol",
            "strict_min_version": "96.0"
        }
    },

    "content_scripts":
    [
        {
            "matches": 
            [
                "https://*.steamcommunity.com/market/search*"
            ],
            "js":
            [
                "src/market.js"
            ],
            "css":
            [
                "src/market.css"
            ],
            "run_at": "document_idle",
            "all_frames": false,
            "match_about_blank": false
        },
        {
            "matches":
            [
                "https://*.steamcommunity.com/id/*/inventory/*"
            ],
            "js":
            [
                "src/inventory.js"
            ],
            "run_at": "document_idle",
            "all_frames": false,
            "match_about_blank": false
        }
    ]
}